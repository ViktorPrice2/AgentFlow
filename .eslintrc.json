{
  "root": true,
  "env": { "es2022": true, "node": true, "browser": true },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "data/",
    "renderer/",
    "**/services/tg-bot/**",
    "**/core/providers/manager.js",
    "**/main/ipcBot.js",
    "test-bot.js"
  ]
}
