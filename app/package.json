{
  "name": "agentflow-desktop",
  "version": "0.1.0",
  "description": "AgentFlow Desktop â€“ modular multi-agent platform for AI marketing automation.",
  "type": "module",
  "main": "main/main.js",
  "author": "AgentFlow",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n renderer,main \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:main": "cross-env NODE_ENV=development ELECTRON_RENDERER_URL=http://localhost:5173 node scripts/run-electron.cjs",
    "build:ui": "cd renderer && npm run build",
    "build:renderer": "cd renderer && vite build",
    "build": "npm run build:ui && electron-builder",
    "lint": "eslint . --ext .js,.jsx --max-warnings=0",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:ci": "vitest run --coverage",
    "e2e:install": "playwright install",
    "test:e2e": "cross-env E2E=1 playwright test",
    "test:e2e:ui": "cross-env E2E=1 playwright test --ui",
    "guard:e2e-leaks": "node ./scripts/tasks/check-prod-bundle.mjs",
    "test:all": "npm run test:ci && npm run test:e2e",
    "orchestrate": "node ../scripts/orchestrator.mjs",
    "verify": "node ../scripts/tasks/verify.mjs",
    "postinstall": "cd renderer && npm install"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "dotenv": "^16.4.5",
    "electron": "31.7.7",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.1.6",
    "global-agent": "^3.0.0",
    "keytar": "^7.9.0",
    "node-cron": "^3.0.3",
    "telegraf": "^4.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@playwright/test": "^1.48.2",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-v8": "^1.6.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.2",
    "playwright": "^1.48.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "build": {
    "appId": "com.agentflow.desktop",
    "productName": "AgentFlow Desktop",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "core/**/*",
      "services/**/*",
      "renderer/dist/**/*",
      "data/**/*",
      "config/**/*",
      ".env"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    }
  }
}
