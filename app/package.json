{
  "name": "agentflow-desktop",
  "version": "0.1.0",
  "description": "AgentFlow Desktop - modular multi-agent platform for AI marketing automation.",
  "type": "module",
  "main": "main/main.js",
  "author": "AgentFlow",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n renderer,main \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:main": "cross-env NODE_ENV=development ELECTRON_RENDERER_URL=http://localhost:5173 electron .",
    "build:ui": "cd renderer && npm run build",
    "build": "npm run build:ui && electron-builder",
    "dist": "npm run build",
    "postinstall": "npm install --prefix renderer && electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^10.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.1.6",
    "keytar": "^7.9.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.1",
    "concurrently": "^8.2.2",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.3.3"
  },
  "build": {
    "appId": "com.agentflow.desktop",
    "productName": "AgentFlow",
    "asar": true,
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "db/**/*",
      "core/**/*",
      "services/**/*",
      "renderer/dist/**/*",
      "data/**/*",
      "config/**/*",
      ".env"
    ],
    "win": {
      "target": "nsis",
      "icon": "main/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
